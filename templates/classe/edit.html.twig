{% extends 'base.html.twig' %}

{% block title %}Modifier la classe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        Modifier la classe
                    </div>
                    <div class="card-body">
                        {{ include('classe/_form.html.twig', {'button_label': 'Mettre à jour', 'edit' : true}) }}
                        <a href="{{ path('app_classe_index') }}" class="btn btn-secondary mt-4">Retour à la liste</a>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header">
                        Supprimer la classe
                    </div>
                    <div class="card-body">
                        {{ include('classe/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
