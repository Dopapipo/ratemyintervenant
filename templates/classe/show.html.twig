{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <h1>Classe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classe.name }}</td>
            </tr>
            <tr>
                <th>Intervenants</th>
                <td>
                    <ul>
                        {% for intervenant in classe.intervenants %}
                            <li>
                                <a title="intervenant" href="{{ path('app_intervenant_show', {'id': intervenant.id}) }}">{{ intervenant.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
            </tr>
            <tr>
                <th>Matieres</th>
                <td>
                    <ul>
                        {% for matiere in classe.matieres %}
                            <li>
                                <a title="matière" href="{{ path('app_matiere_show', {'id': matiere.id}) }}">{{ matiere.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
            </tr>
        </tbody>
    </table>

    <a title="Retour à la liste" href="{{ path('app_classe_index') }}">back to list</a>

    <a title="Modifer" href="{{ path('app_classe_edit', {'id': classe.id}) }}">edit</a>

    {{ include('classe/_delete_form.html.twig') }}
{% endblock %}
