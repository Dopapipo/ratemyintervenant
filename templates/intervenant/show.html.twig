{% extends 'base.html.twig' %}

{% block title %}Intervenant{% endblock %}

{% block body %}
    <h1>Intervenant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ intervenant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ intervenant.name }}</td>
            </tr>
            <tr>
                <th>Classes enseignées</th>
                <td>
                    <ul>
                        {% for classe in intervenant.classesTaught %}
                            <li>
                                <a href="{{ path('app_classe_show', {'id': classe.id}) }}">{{ classe.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>

            </tr>
            <tr>
                <th>Reviews</th>
                <td>
                    <ul>
                        {% for review in intervenant.reviews %}
                            <li>
                                <a href="{{ path('app_review_show', {'id': review.id}) }}">{{ review.content }}</a> Note : {{ review.grade }}
                            </li>
                        {% endfor %}
                    </ul>
            </tr>
            <tr>
                <th>Matières Enseignées</th>
                <td>
                    <ul>
                        {% for matiere in intervenant.matieresEnseignees %}
                            <li>
                                <a href="{{ path('app_matiere_show', {'id': matiere.id}) }}">{{ matiere.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_intervenant_index') }}">back to list</a>

    <a href="{{ path('app_intervenant_edit', {'id': intervenant.id}) }}">edit</a>

    {{ include('intervenant/_delete_form.html.twig') }}
{% endblock %}
