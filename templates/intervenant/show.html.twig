{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/show_intervenant.css') }}">
{% endblock %}

{% block title %}Intervenant{% endblock %}

{% block body %}
    <div class="container">
        <div class="main-body">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a title="accueil" href={{path('app_home')}}>Accueil</a></li>
                    <li class="breadcrumb-item"><a title="intervenants" href="{{ path('app_blog_index') }}">Intervenants</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{intervenant.name}}</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="{{ asset('uploads/images/' ~ intervenant.profilePictureFileName) }}" alt="{{ intervenant.name }}" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ intervenant.name }}</h4>
                                    <p class="text-secondary mb-1">
                                        Matières Enseignées :
                                        {% for matiere in intervenant.matieresEnseignees %}
                                            {{ matiere.name }}
                                            {{ intervenant.getAverageParMatiere(matiere) }}
                                            {% if not loop.last %}
                                                ,
                                            {% endif %}
                                        {% endfor %}
                                    </p>
                                    <p class="text-muted font-size-sm">Paris 1 Panthéon Sorbonne</p>
                                    <!-- Afficher la note moyenne -->
                                    <div class="stats">
                                        <span>{{ intervenant.average }}</span>
                                    </div>
                                    <br>
                                    <a title="noter" class="btn btn-primary" href={{ path('app_review_new', {"intervenantid":intervenant.id})}}>Noter</a>
                                    <a title="retour à la liste" class="btn btn-outline-primary" href="{{ path('app_blog_index')}}">Retour à la liste</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <h1>Reviews</h1>
                    <div class="card mb-3">
                        <div class="card-body">
                            <!-- Afficher les deux dernières critiques -->

                            {% for review in intervenant.reviews %}
                                {% include "review/show.html.twig" %}
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Ajouter plus de sections si nécessaire -->

                </div>
            </div>

        </div>
    </div>
{% endblock %}