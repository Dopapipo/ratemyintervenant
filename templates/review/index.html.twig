{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">Toutes les notes des intervenants</h1>

    <section class="py-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for review in reviews %}
                    <div class="col">
                        <div class="card h-100 shadow">
                            <div class="card-header bg-transparent d-flex justify-content-between">
                                <h5 class="mb-0">Note : {{ review.grade }}/5</h5>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">{{ review.author.name }}</h5>
                                <p class="card-text small mb-3">{{ review.author.classe.name }}</p>
                                <div class="mb-4">
                                    <p class="card-text mb-0">Intervenant : <a href="{{ path('app_intervenant_show', {'id': review.intervenant.id}) }}">{{ review.intervenant.name }}</a></p>
                                    <p class="card-text">Mati√®re : {{ review.matiere.name }}</p>
                                </div>
                                <p class="card-text" style="font-size: 18px;">{{ review.content }}</p>
                            </div>
                            <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                                <div>
                                    {# <a href="{{ path('like_review', {'id': review.id}) }}" class="link-muted me-2"><i class="fas fa-thumbs-up me-1"></i> {{ review.likes }}</a> #}
                                    {#<a href="{{ path('dislike_review', {'id': review.id}) }}" class="link-muted"><i class="fas fa-thumbs-down me-1"></i> {{ review.dislikes }}</a> #}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center">Aucune critique disponible</p>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
