{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/new_review.css') }}">
{% endblock %}

{% block title %}New Review{% endblock %}

{% block body %}
    <div class="container mt-5">  <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">  <div class="card-header">
                        {{ block('title') }}
                    </div>
                    <div class="card-body">
                        <h1 class="mb-4">{{ block('title') }}</h1>

                        {{ include('review/_form.html.twig', {'button_label': 'Create'}) }}
                        <a href="{{ path('app_review_index') }}" class="btn btn-secondary mt-4">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    function updateGradeDisplay(value) {
        var display = document.getElementById('grade-display');
        display.textContent = 'Note : ' + value + '/5';
    }
</script>
{% endblock %}